{% extends 'base.html.twig' %}

{% block body %}
    {% include 'Widget/header.html.twig' %}
    <h1>Mes playlists</h1>
    <a href="{{ path('app_playlist_create') }}">Cr√©er une playlist</a>

    {% for playlist in playlists %}
        <h2>{{ playlist.name }}</h2>
        <ul>
            {% for movie in playlist.movies %}
                <li>{{ movie.title }}
                </li>
            {% endfor %}
        </ul>
        <a href="{{ path('app_playlist_remove', { id: playlist.id }) }}">Supprimer</a>
    {% endfor %}
{% endblock %}
