{% extends 'base.html.twig' %}

{% block body %}
    {% include 'Widget/header.html.twig' %}
    <h1>Mes playlists</h1>
    <a href="{{ path('app_playlist_create') }}">Cr√©er une playlist</a>

    {% for playlist in playlists %}
        <h2>{{ playlist.name }}</h2>
        <ul>
            {% for movie in playlist.movies %}
                <li>{{ movie.title }}
                    <a href="{{ path('app_playlist_remove_movie', { id: playlist.id, movieId: movie.id }) }}">Retirer</a>
                </li>
            {% endfor %}
        </ul>
        {% include 'Widget/Playlist/actions.html.twig' with {'playlist': playlist} %}
    {% endfor %}
{% endblock %}
