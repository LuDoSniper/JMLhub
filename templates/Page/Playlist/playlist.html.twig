{% extends 'base.html.twig' %}

{% block body %}
    {% include 'Widget/header.html.twig' %}

    <div class="manage">
        <h1>Mes playlists</h1>

        <a class="button" href="{{ path('app_playlist_create') }}">Cr√©er une playlist</a>

        <table>
            <thead>
            <tr>
                <th>Nom de la playlist</th>
                <th>Films</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for playlist in playlists %}
                <tr>
                    <td>{{ playlist.name }}</td>
                    <td>
                        <ul>
                            {% for movie in playlist.movies %}
                                <li>
                                    {{ movie.title }}
                                    <a class="button delete" href="{{ path('app_playlist_remove_movie', { id: playlist.id, movieId: movie.id }) }}">Retirer</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        {% include 'Widget/Playlist/actions.html.twig' with {'playlist': playlist} %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="no-data">Aucune playlist disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
